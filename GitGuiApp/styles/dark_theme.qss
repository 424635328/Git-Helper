/* --- Input & Text Widgets --- */
QLineEdit {
    background-color: #3a3a3a;
    color: #cccccc;
    border: 1px solid #505050;
    padding: 4px 6px;
    border-radius: 4px;
}

QLineEdit:focus {
    border-color: #007acc; /* Accent color on focus */
    background-color: #4a4a4a; /* Slightly different background on focus */
}

QLineEdit::placeholder {
    color: #888888; /* Secondary text color for placeholders */
}

QLineEdit:disabled {
    background-color: #333333;
    color: #666666;
    border-color: #404040;
}

/* QTextEdit styling - affects sequence display, diff, commit details */
/* Note: outputDisplay has specific styles in Python currently, consider removing them */
QTextEdit {
    background-color: #1e1e1e; /* Secondary background, good for code/output */
    color: #cccccc;
    border: 1px solid #505050;
    padding: 5px;
    border-radius: 4px;
    font-family: "Courier New", monospace; /* Ensure monospace font */
}

QTextEdit:read-only {
