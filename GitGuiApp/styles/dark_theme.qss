/*
 * Git GUI Dark Theme QSS
 * Optimized for ui/main_window.py
 */

/* Base Colors */
/* Main Background: 深灰色 */
/* Secondary Background: 更深的灰色，用于代码、输出区域 */
/* Tertiary Background: 稍浅的灰色，用于输入框、按钮等 */
/* Foreground/Text: 浅灰色 */
/* Secondary Text: 暗淡的灰色，用于占位符、禁用项 */
/* Border/Separator: 中等灰色 */
/* Highlight/Accent: 蓝色 */
/* Selection Background: 暗蓝色 */
/* Hover/Pressed Background: 稍浅的交互色 */

:root {
    /* Define colors as properties for potential future use, though direct values are fine */
    qproperty-background-main: #2e2e2e;
    qproperty-background-secondary: #1e1e1e;
    qproperty-background-tertiary: #3a3a3a;
    qproperty-foreground-main: #cccccc;
    qproperty-foreground-secondary: #888888;
    qproperty-border-main: #505050;
    qproperty-accent-color: #007acc; /* VS Code Blue */
    qproperty-selection-background: #3a3d63; /* VS Code Selection */
    qproperty-selection-foreground: #ffffff;
    qproperty-hover-background: #4a4a4a;
    qproperty-pressed-background: #5a5a5a;
    qproperty-disabled-foreground: #666666; /* Darker gray for disabled text */

    /* Specific colors mentioned in Python (for consistency, though QSS won't directly use _output_colors dict) */
    qproperty-color-prompt: #55aaff;
    qproperty-color-command: #aaffaa;
    qproperty-color-stdout: #cccccc;
    qproperty-color-stderr: #ff6666;
    qproperty-color-success: #66ff66;
    qproperty-color-info: #55aaff;
    qproperty-color-separator: #888888;
}


/* --- General --- */
QWidget {
    background-color: #2e2e2e; /* Main background */
    color: #cccccc; /* Main text color */
    selection-background-color: #3a3d63; /* Selection background */
    selection-color: #ffffff; /* Selection text color */
}

QLabel {
    color: #cccccc; /* Ensure labels have text color */
    /* Optional: set padding for better spacing */
    padding-top: 2px;
    padding-bottom: 2px;
}

QFrame[shape="4"] { /* QFrame::HLine */
    background-color: #505050; /* Darker separator color */
    max-height: 1px;
    border: none; /* Remove default border */
}


/* --- Buttons --- */
QPushButton {
    background-color: #3a3a3a;
    color: #cccccc;
    border: 1px solid #505050;
    padding: 5px 10px;
    border-radius: 4px;
    min-height: 20px; /* Ensure buttons have a minimum height */
}

QPushButton:hover {
    background-color: #4a4a4a;
    border-color: #606060;
}

QPushButton:pressed {
    background-color: #5a5a5a;
    border-color: #707070;
}

QPushButton:disabled {
    background-color: #333333;
    color: #666666;
    border-color: #404040;
}

