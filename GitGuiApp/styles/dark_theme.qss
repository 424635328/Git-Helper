/* --- Tool Bar --- */
QToolBar {
    background-color: #3a3a3a; /* Dark background for toolbar */
    border: none; /* Remove default border */
    padding: 3px;
    spacing: 5px; /* Space between tool buttons */
}

QToolButton {
    background-color: transparent; /* Transparent by default */
    border: 1px solid transparent; /* Invisible border */
    padding: 5px;
    border-radius: 4px;
}

QToolButton:hover {
    background-color: #4a4a4a;
    border-color: #505050;
}

QToolButton:pressed {
    background-color: #5a5a5a;
    border-color: #606060;
}

QToolButton:disabled {
    /* ToolButton disabled state can be handled by QAction enable state */
    /* If you need specific visual style: */
    /* opacity: 0.6; */
}

QToolBar::separator {
    width: 6px;
    background-color: #505050;
    margin: 0 3px;
}


/* --- Status Bar --- */
QStatusBar {
    background-color: #3a3a3a; /* Match tool bar/menu background */
    color: #cccccc;
    border-top: 1px solid #505050;
    padding: 2px 5px;
}

QStatusBar::item {
    border: none; /* Remove border around status bar items */
}