/* --- List, Tree, Table Views --- */
QAbstractScrollArea, QTreeView, QListWidget, QTableWidget {
    background-color: #252526; /* A common darker background for views */
    color: #cccccc;
    border: 1px solid #505050;
    border-radius: 4px;
    alternate-background-color: #2a2a2b; /* Slightly different for alternating rows */
    gridline-color: #404040; /* Subtle grid lines */
}

QAbstractItemView::item {
    padding: 3px; /* Add some padding to list/tree/table items */
}

QAbstractItemView::item:selected {
    background-color: #3a3d63; /* Selection background */
    color: #ffffff; /* Selection foreground */
}

QAbstractItemView::item:hover {
    background-color: #333333; /* Subtle hover effect */
}


/* Headers for Tree and Table */
QHeaderView::section {
    background-color: #3a3a3a;
    color: #cccccc;
    padding: 4px;
    border: 1px solid #505050;
    border-bottom: none; /* Remove bottom border for a cleaner look */
    /* Optional: text-align: left; */
}

QHeaderView::section:horizontal {
    border-right: 1px solid #505050;
}

QHeaderView::section:horizontal:last {
    border-right: none;
}

QHeaderView::section:pressed {
    background-color: #4a4a4a;
}


/* --- Scrollbars --- */
QScrollBar:vertical, QScrollBar:horizontal {
    border: none;
    background: #3a3a3a; /* Background of the scrollbar area */
    width: 10px; /* Vertical scrollbar width */
    height: 10px; /* Horizontal scrollbar height */
    margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background: #5a5a5a; /* Handle color */
    border-radius: 4px;
    min-height: 20px; /* Minimum size for handle */
    min-width: 20px;
}

QScrollBar::handle:vertical:hover, QScrollBar::handle:horizontal:hover {
    background: #6a6a6a;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
    height: 0px; /* Hide the add/subtract line buttons */
    width: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical,
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}


/* --- Splitter --- */
QSplitter::handle {
    background-color: #505050;
    border: 1px solid #404040;
    width: 2px; /* Width for vertical splitter */
    height: 2px; /* Height for horizontal splitter */
}

QSplitter::handle:hover {
    background-color: #606060;
}

QSplitter::handle:horizontal {
    width: 6px; /* Make horizontal handle wider for easier grabbing */
    image: url(path_to_horizontal_handle_icon.png); /* Optional: add a handle image */
}

QSplitter::handle:vertical {
    height: 6px; /* Make vertical handle taller */
    image: url(path_to_vertical_handle_icon.png); /* Optional: add a handle image */
}
/* You might need to provide handle images or use default Qt style (often looks fine) */


/* --- Tabs --- */
QTabWidget::pane {
    border: 1px solid #505050;
    background-color: #2e2e2e; /* Match main background */
    margin-top: -1px; /* Overlap with the tab bar border */
    border-radius: 4px;
}

QTabBar::tab {
    background: #3a3a3a; /* Default tab background */
    color: #cccccc;
    border: 1px solid #505050;
    border-bottom: none; /* Remove bottom border on tabs */
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 8px 15px;
    margin-right: 1px; /* Spacing between tabs */
}

QTabBar::tab:selected {
    background: #2e2e2e; /* Selected tab matches pane background */
    border-bottom-color: #2e2e2e; /* Hide bottom border to blend with pane */
    font-weight: bold;
}

QTabBar::tab:hover:!selected {
    background: #4a4a4a; /* Hover effect for non-selected tabs */
}

QTabBar::tab:first:selected {
    margin-left: 0;
}


/* --- Menu Bar and Menus --- */
QMenuBar {
    background-color: #3a3a3a; /* Match tool bar background */
    color: #cccccc;
    padding: 2px;
    border-bottom: 1px solid #505050;
}

QMenuBar::item {
    padding: 4px 10px;
    background: transparent;
}

QMenuBar::item:selected {
    background: #4a4a4a; /* Hover color */
}

QMenuBar::item:pressed {
    background: #5a5a5a; /* Pressed color */
}

QMenu {
    background-color: #3a3a3a; /* Match menu bar item hover */
    color: #cccccc;
    border: 1px solid #505050;
    border-radius: 4px;
    padding: 5px;
}

QMenu::item {
    padding: 5px 20px 5px 25px; /* Add padding, space for checkmark/icon */
    border: 1px solid transparent; /* Invisible border for hover effect */
    border-radius: 2px;
}

QMenu::item:selected {
    background-color: #3a3d63; /* Selection background */
    color: #ffffff;
    border-color: #3a3d63; /* Match border color to background on selection */
}

QMenu::separator {
    height: 1px;
    background: #505050;
    margin: 5px 0;
}

